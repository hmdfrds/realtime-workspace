{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": ["src/**/*", "src/@types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
